import random
secret_number = random.randint(1, 100)

def is_valid(user_input):
    if user_input.isdigit():
        user_number = int(user_input)
        if user_number >= 1 and user_number <= 100:
            return True
        else:
            return False
    else:
        return False
    
def want_more():

    global secret_number
    secret_number = random.randint(1, 100)
    global global_trying
    global_trying = 0
    
    while True:
        print('Желаете сыграть ещё раз? Да/Нет')
        more_games_str = input()
        more_games_str = more_games_str.lower()
        if more_games_str == ('да'):
            games()
        elif more_games_str != ('нет'):
            print('Введите Да или Нет')
            continue            
        else:
            print('Спасибо за Игру, приходите ещё!')
            break


global_trying = 1

def search(n):
    numbers = []
    
    for i in range(101):
        numbers.append(i)
    count = 0  
    
    while True:
        mid = len(numbers) // 2
        center = numbers[mid]
        low = 0
        high = len(numbers) - 1
               
        if n > center:
            count += 1
            del numbers[low:mid]
        elif n < center:
            count += 1
            del numbers[mid:high + 1]
        else:
            count += 1
            break  
    return count

def games():
    while True:
        print('Введите число от 1 до 100')
        user_input = input()
        global global_trying
    
        if not is_valid(user_input):
            continue
        user_number = int(user_input)

        count = search(user_number)

        if secret_number > user_number:
            print('Загаданное Число больше, чем введённое Вами')
            global_trying += 1

        elif secret_number < user_number:
            print('Загаданное Число меньше, чем введённое Вами')
            global_trying += 1

        else:
            print('Ура! Вы угадали загаданное Число')
            print(f'Вы молодец, у Вас получилось с {global_trying} попытки!')
            print(f'Я нашёл с {count} попытки')
            want_more()
            break


def second_game():
    print('Загадайте число от 1 до 100')
    user_input = input()
    if is_valid(user_input):
        n = int(user_input)


    numbers = []
    
    for i in range(101):
        numbers.append(i)
    count = 0  
    
    while True:
        mid = len(numbers) // 2
        center = numbers[mid]
        low = 0
        high = len(numbers) - 1
               
        if n > center:
            count += 1
            del numbers[low:mid]
        elif n < center:
            count += 1
            del numbers[mid:high + 1]
        else:
            count += 1
            break  
    print(f'Ваше число {center}. Нашёл c {count} попытки )')


 
print('Добро пожаловать в Игру "Угадай Число"!')
games()

num = int(input())
first_num = num // 100
second_num = num % 100 // 10
third_num = num % 10
sum_num = (first_num + second_num + third_num)
milti_num = (first_num * second_num * third_num)
print('Вводится число', num)
print('Сумма цифр числа', num, 'равна', sum_num)
print('Произведение цифр числа', num, 'равно', milti_num)
